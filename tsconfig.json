{
  "compilerOptions": {
    "target": "ES6",
    "module": "commonjs",
    "lib": ["ES2020"],
    "sourceMap": false,
    "outDir": "./dist/",
    "removeComments": false,
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
	"resolveJsonModule": true
  },
  "include": [
	  "./src/**/*"
  ],
  "exclude": [
	  "node_modules",
	  "sample_config.json"
  ]
}
